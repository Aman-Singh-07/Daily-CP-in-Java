// https://www.codechef.com/problems/BREAKSTICK

import java.util.*;
class Solution{
    public static void main(String[] args){
        Scanner input=new Scanner(System.in);
        int t=input.nextInt();
        while(t-->0){
            int n=input.nextInt();
            int x=input.nextInt();
            System.out.println((x%2==0)?(n-x)%2!=0?"NO":"YES":"YES");
        }
    }
}
