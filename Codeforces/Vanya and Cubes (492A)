// https://codeforces.com/problemset/problem/492/A

import java.util.*;
public class Solution {
    public static void main(String[] args) {
        Scanner input=new Scanner(System.in);
        int t=input.nextInt();
        int i=1;
        int count=0;
        while(((i*(i+1)*(i+2))/6)<=t){
            count++;
            i++;
        }
        System.out.println(count);
    }
}
